<UserControl x:Class="SpaceInvaders.UserControlés.ShotControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpaceInvaders.UserControlés"
             xmlns:ships="clr-namespace:SpaceInvaders.Ships"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance ships:Shot}"
			 d:DesignHeight="{Binding ShotSize.Height}" d:DesignWidth="{Binding ShotSize.Width}">
    <Image Source="../Resources/LeSchuss.png" Height="{Binding ShotSize.Height}" Width="{Binding ShotSize.Width}" />
</UserControl>
