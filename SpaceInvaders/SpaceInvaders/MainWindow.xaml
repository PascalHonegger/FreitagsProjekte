<Window x:Class="SpaceInvaders.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:userControls="clr-namespace:SpaceInvaders.UserControls"
        SizeChanged="MainWindow_OnSizeChanged"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
	<Grid Background="Black" x:Name="PlayArea" Focusable="True" KeyDown="UIElement_OnKeyDown" Loaded="PlayArea_OnLoaded">
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>
		<Button Grid.Column="1" Grid.Row="1" Content="Spiel starten" Click="button_Click"/>
		<userControls:ShipControl Grid.Row="0" Grid.Column="0"></userControls:ShipControl>
		<userControls:ShotControl Grid.Row="0" Grid.Column="0"></userControls:ShotControl>
	</Grid>
</Window>